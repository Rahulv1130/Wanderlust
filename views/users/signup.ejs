<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-4">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3 mt-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" placeholder="Add an Username" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Empty Username!
                </div>
            </div>
            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" placeholder="Add an email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" placeholder="Add a password" class="form-control" required>
            </div>

            <button class="btn btn-danger">SignUp</button>
        </form>
    </div>
</div>